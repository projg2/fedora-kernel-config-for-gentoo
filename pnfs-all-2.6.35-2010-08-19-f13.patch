+
+	dcp = find_pnfs_ds_clientid((clientid_t *)&gsp->clid);
+	if (!dcp) {
+		dcp = alloc_init_ds_clientid(gsp);
+		if (!dcp)
+			return 1;
+		new = 1;
+	}
+	if (test_bit(DS_STATEID_NEW, &dsp->ds_flags)) {
+		list_add(&dsp->ds_perclid, &dcp->dc_stateid);
+		if (!new)
