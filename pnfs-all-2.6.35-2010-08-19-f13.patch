+static ssize_t
+panlayout_get_blocksize(void)
+{
+	ssize_t sz = (PANLAYOUT_MAX_STRIPE_WIDTH-1) *
+		      PANLAYOUT_DEF_STRIPE_UNIT *
+		      PANLAYOUT_MAX_GATHER_STRIPES;
+	dprintk("%s: Return %Zd\n", __func__, sz);
+	return sz;
