+	__set_current_state(TASK_RUNNING);
+	remove_wait_queue(&bc->pipe_wq, &wq);
+	mutex_lock(&bc->pipe_lock);
+	
+	if (m->msg_status == PNFS_BLOCK_SUCCESS) {
+		*res = m->msg_res;
+		rval = 0;
+	} else
+		rval = 1;
+	
+out:
+	mutex_unlock(&bc->pipe_lock);
+	mutex_unlock(&bc->lock);
+	return rval;
+}
