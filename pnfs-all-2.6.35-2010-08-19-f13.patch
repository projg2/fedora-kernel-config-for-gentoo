+static void
+print_bll(pnfs_blocklayout_layout_t *b, char *text)
+{
+	dprintk("    BLL: %s\n", text);
+	dprintk("    foff %Lu, soff %Lu, len %Lu, state %s\n",
+	    _2SECTS(b->bll_foff), _2SECTS(b->bll_soff), _2SECTS(b->bll_len),
+	    map_state2name(b->bll_es));
